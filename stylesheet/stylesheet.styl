.u-title
  color #5190dd
  border-bottom 2px dashed #5190dd
  text-align center
  padding-bottom .5em
  padding-top 3.75em
  
.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background-color #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #5190dd
  text-decoration none
  line-height 3.75em
  margin-right 1.5em
  &::before
    &:active
      color white

.Header
  margin-top 3.75em
  background-image url('../images/header.png')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0

.Header-ContenedorImg
  margin 0

.Header-img
  width 250px
  border-radius 50%
  border 5px solid white

.Header-link,
.Header-name
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background-color orange
  color white
  text-decoration none
  padding .5em 3em
  border-radius 2em
  margin-right .5em
  display inline-block
  margin-bottom 1em
  &.facebook
    background #45619D
  &.twitter
    background-color #55ACEE
  &.github
    background-color #C127D5

.Work
  margin-top 2em
  text-align center
  padding 0 1em
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Footer
  background-image url('../images/footer.png')
  background-repeat no-repeat
  background-position center
  background-size cover
  padding 2em 0
  text-align center

.Footer-title
  color white
  margin-right 5em
  padding-right 1em

.Footer-form
  text-align center
  display inline-block

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0

.Footer-button
  background-color orange
  color white
  border 0
  padding .5em 1em
  border-radius 1em

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-description
  color #5190dd
  margin-right 5em
  padding-right 1em

@media screen and (max-width: 480px)
  .Profile
    &-link
      display block
  .Footer
    &-title,
    &-description
      margin-right 0
      padding-right 0
      


@media screen and (max-width: 767px)
  .Footer
    &-form
      display block
    &-formInput,
    &-textarea
      width 90%
      box-sizing border-box
    
